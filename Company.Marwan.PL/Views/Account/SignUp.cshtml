@using Company.Marwan.PL.Dto
@model SignUpDto
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form asp-action="SignUp">
			<input class="text" asp-for="UserName" placeholder="Username" required="">
			<input class="text" asp-for="FristName" placeholder="FristName" required="">
			<input class="text" asp-for="LastName" placeholder="LastName" required="">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="confirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
				    <input asp-for="ISAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

@section VAlidationSection{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
